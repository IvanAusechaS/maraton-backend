{
  "compilerOptions": {
    "target": "es6",
    "module": "CommonJS",
    "rootDir": "src",
    "outDir": "dist",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "sourceMap": true
  },
  "include": ["src/**/*"],
  //"exclude": ["node_modules"]
}